                                 baseTableName="api_service_method_method"
                                 constraintName="fk_api_service_method_method_api_service_method_id"
                                 referencedColumnNames="id"
                                 referencedTableName="api_service_method"/>

        <addForeignKeyConstraint baseColumnNames="method_id"
                                 baseTableName="api_service_method_method"
                                 constraintName="fk_api_service_method_method_method_id"
                                 referencedColumnNames="id"
